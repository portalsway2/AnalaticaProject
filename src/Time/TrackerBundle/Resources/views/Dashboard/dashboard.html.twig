{% extends '::base.html.twig' %}

{% block body %}

    <style>

        .sp-container h2 {
            position: absolute;
            top: 40%;
            line-height: 100px;
            height: 100px;
            left: 20%;
            margin-top: -50px;
            font-size: 90px;
            text-align: center;
            color: transparent;
            -webkit-animation: blurFadeInOut 3s ease-in backwards;
            -moz-animation: blurFadeInOut 3s ease-in backwards;
            -ms-animation: blurFadeInOut 3s ease-in backwards;
            animation: blurFadeInOut 3s ease-in backwards;
        }

        .sp-container h2.frame-1 {
            -webkit-animation-delay: 60s;
            -moz-animation-delay: 60s;
            -ms-animation-delay: 60s;
            animation-delay: 0s;
        }

        @-moz-keyframes blurFadeInOut {
            0% {
                opacity: 0;
                text-shadow: 13px 13px 40px red;
                -moz-transform: scale(1.3);
            }
            20%, 75% {
                opacity: 1;
                text-shadow: 12px 12px 1px red;
                -moz-transform: scale(1);
            }
            100% {
                opacity: 0;
                text-shadow: 12px 12px 50px red;
                -moz-transform: scale(0);
            }
        }

        .b {
            position: absolute;
            bottom: 0%;
            left: 20%;
            width: 50%;
            height: 49.5%
        }

    </style>


    <div class="container">
        <div class="sp-container">
            <div class="sp-content">
                <div class="sp-globe"></div>
                <h2>Enjoy with our services</h2>
                <a class="sp-circle-link" href="#"></a>

            </div>
        </div>
    </div>

    <div class="b">
        <a href="#">
            {% image "bundles/timetracker/image/img1.jpg" %}
            <img src="{{ asset_url }}"/>
            {% endimage %}
        </a>
    </div>

{% endblock %}