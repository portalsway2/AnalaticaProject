{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    {% block fos_user_content %}
        {% if error %}
            <div>{{ error|trans }}</div>
        {% endif %}


        <form action="{{ path("fos_user_security_check") }}" method="post">
            <h1>Login</h1>

            <p><input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/></p>

            <p>
                <label for="username" class="uname"> Your username </label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>

            <p>
                <label for="password" class="youpasswd"> Your password </label>
                <input type="password" id="password" name="_password" required="required"/>
            </p>

            <p class="keeplogin">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                <label for="remember_me">{{ 'remember_me'|trans }}</label></p>
            </p>
            <p class="login button">
                <input type="submit" id="_submit" name="_submit" value="{{ 'connect'|trans }}"/>
            </p>

        </form>
    {% endblock fos_user_content %}
{% endblock %}